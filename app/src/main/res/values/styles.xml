<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SearchViewTheme" >
        <item name="colorControlActivated">@android:color/black</item>
        <item name="colorControlNormal">@android:color/holo_blue_dark</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="queryBackground">@android:color/white</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="MyAppTheme" parent="@style/AppTheme" />

    <style name="MaterialDrawer.DrawerArrowStyle"
        parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/holo_red_dark</item>
    </style>

</resources>
