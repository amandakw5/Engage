<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.engage.EventDetailsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivPicture"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvEventName"
                android:layout_margin="10dp"
                app:srcCompat="@android:color/black" />

            <TextView
                android:id="@+id/tvHost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ivPicture"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/ivPicture"
                android:text="@string/host"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvEventInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHost"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/ivPicture"
                android:text="@string/event_info"
                android:textSize="16sp"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/tvEventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_description"
                android:layout_below="@+id/ivPicture"
                android:layout_alignStart="@+id/ivPicture" />

            <TextView
                android:id="@+id/tvEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/ivPicture"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text="@string/event_name"
                android:textSize="36sp"
                android:textStyle="bold" />
            <fragment
                android:id="@+id/youtubeFragment"
                android:layout_below="@+id/tvEventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:name="com.google.android.youtube.player.YouTubePlayerFragment">
            </fragment>
        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:onClick="saveEvent"/>
    <Button
        android:id="@+id/btnMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/map"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />
</RelativeLayout>
