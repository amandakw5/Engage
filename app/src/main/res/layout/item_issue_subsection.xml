<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/viewevents_border"
    android:elevation="2dp"
    android:layout_marginTop="7dp"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/readmore"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Specific Issues"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/issueList"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/subTitle"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="10dp"
        android:scrollbarSize="3dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        android:scrollingCache="true"
        android:smoothScrollbar="true"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/readmore"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/issueList"
        android:layout_below="@+id/issueList"
        android:padding="8dp"
        android:text="Read more!"
        android:textColor="#000000" />

</RelativeLayout>